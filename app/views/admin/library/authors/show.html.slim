      li = link_to 'Ver Autores', admin_authors_url, class: 'btn-back'
    ul.nav-section
      li = link_to 'Adicionar Arquivo', new_admin_library_file_url, class: 'btn btn--primary fa fa-plus'

  .section-body
    p.library-category = @author
    = render 'admin/library/shared/files', collection: @files
